{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "pretest",
            "group": "test"
        },
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "type": "npm",
            "script": "lint",
            "group": "build",
            "presentation": {
                "panel": "shared"
            }
        }
    ]
}
